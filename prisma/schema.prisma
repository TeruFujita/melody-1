generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recommendation {
  id            String   @id @default(uuid())
  userId        String
  emotion       String
  message       String?
  songTitle     String
  songArtist    String
  songImageUrl  String
  spotifyUrl    String
  createdAt     DateTime @default(now())
}

model RecommendationHistory {
  id            String   @id @default(uuid())
  userId        String
  emotion       String
  songTitle     String
  songArtist    String
  songImageUrl  String
  spotifyUrl    String
  createdAt     DateTime @default(now())
}

model Favorite {
  id            String   @id @default(uuid())
  userId        String
  sourceType    String   // "ai" or "gift"
  sourceId      String
  songTitle     String
  songArtist    String
  songImageUrl  String
  spotifyUrl    String
  createdAt     DateTime @default(now())
}
